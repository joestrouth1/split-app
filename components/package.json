{
  "name": "components",
  "version": "0.2.0",
  "main": "dist/index.js",
  "module": "dist/components.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --env=jsdom",
    "lint": "eslint --ignore-path .gitignore . --ext ts --ext tsx --ext js --ext jsx",
    "styleguide": "cross-env BABEL_ENV=styleguide styleguidist server",
    "styleguide:build": "cross-env BABEL_ENV=styleguide styleguidist build",
    "precommit": "yarn lint --fix && pretty-quick --staged"
  },
  "peerDependencies": {
    "normalize.css": "^8.0.1",
    "react": ">=16"
  },
  "jest": {
    "globals": {
      "__DEV__": "boolean"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/setupTests.ts"
    ],
    "moduleNameMapper": {
      "\\.(css)$": "<rootDir>/test/__mocks__/styleMock.ts",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/test/__mocks__/fileMock.ts"
    },
    "watchPathIgnorePatterns": [
      "<rootDir>/.rts2_cache_cjs/",
      "<rootDir>/.rts2_cache_esm/",
      "<rootDir>/coverage/",
      "<rootDir>/dist/",
      "<rootDir>/node_modules/",
      "<rootDir>/styleguide/"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@testing-library/jest-dom": "^4.1.0",
    "@testing-library/react": "^9.1.3",
    "@types/jest": "^24.0.18",
    "@types/lodash": "^4.14.138",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "@types/theme-ui": "^0.2.2",
    "@typescript-eslint/eslint-plugin": "^2.3.0",
    "@typescript-eslint/parser": "^2.3.0",
    "autoprefixer": "^9.6.1",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "cross-env": "^6.0.0",
    "css-loader": "^3.2.0",
    "cssnano": "^4.1.10",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-jest": "^22.17.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^2.0.1",
    "file-loader": "^4.2.0",
    "husky": "^3.0.4",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "react": "^16.9.0",
    "react-docgen-typescript": "^1.14.0",
    "react-dom": "^16.9.0",
    "react-styleguidist": "^9.1.16",
    "rollup-plugin-postcss": "^2.0.3",
    "style-loader": "^1.0.0",
    "tsdx": "^0.9.0",
    "tslib": "^1.10.0",
    "typeface-open-sans": "^0.0.75",
    "typescript": "^3.5.3",
    "webpack": "^4.39.3"
  },
  "dependencies": {
    "@emotion/core": "^10.0.16",
    "@mdx-js/react": "^1.4.0",
    "colorable": "^1.0.5",
    "lodash": "^4.17.15",
    "lodash-es": "^4.17.15",
    "rifm": "^0.9.1",
    "theme-ui": "^0.2.38"
  },
  "resolutions": {
    "colorable/lodash": "^4.17.15"
  }
}